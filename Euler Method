import numpy as np
import matplotlib.pyplot as plt

A = 0.5
# Time variables
time = np.arange(0, 24, 0.01)  # Time in hours (simulating a day with smaller time steps)

# Power curve calculation
power_curve = A - A * np.cos((2*np.pi/4)*(time))

# Plotting the curve
plt.figure(figsize=(10, 6))
plt.plot(time, power_curve, label='Power Curve')
plt.title('Power Curve Over 24 Hours')
plt.xlabel('Time (hours)')
plt.ylabel('Power')
plt.grid(True)
plt.legend()
plt.show()